{
  "name": "timer-assistant",
  "version": "1.0.0",
  "description": "A desktop timer management application with natural language processing",
  "main": "src/main.js",
  "scripts": {
    "start": "node web-server.js",
    "dev": "node web-server.js",
    "electron": "electron src/main.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "timer",
    "productivity",
    "desktop",
    "electron"
  ],
  "author": "Timer Assistant",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "build": {
    "appId": "com.timerassistant.app",
    "productName": "Timer Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
